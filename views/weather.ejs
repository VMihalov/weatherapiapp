<!DOCTYPE html>
<html>
<head>
	<title>Weather API</title>

    <!--<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">-->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> 
  	<script type="text/javascript">
  		$(document).ready(function(){
  			$('#send').on('click', function(){
  				var input = $('#city').val();
  				$.ajax({
  					url: "/weather",
  					type: "POST",
  					data: ({city: input}),
  					success: function(data){
  						$('#response').html(data);
					  },
					before: function(){
						$('#response').text('Loading...');
					}
  				});
  			});
  		});
	  </script>
	  <style>
		  body{
			  font-family: Arial, Helvetica, sans-serif;
		  }
		  header{
			  width: 100%;
			  height: 15vh;
		  }
		  .content{
			  width: 40%;
			  height: 100%;
			  margin: 0 auto;
		  }
		  .form{
			width: 100%;
			height: 50%;
		  }
		  .input-form{
			float: left;
			width: 65%;
		  }
		  .button-form{
			float: right;
			width: 35%;
		  }
		  .input-form input{
			border: 1px solid black;
			border-radius: 15px;
			width: 85%;
			padding: 15px;
			color: gray;
		  }
		  .button-form button{
			background: #008afc;
			color: white;
			width: 100%;
			border: 0;
			border-radius: 15px;
			padding: 15px;
			cursor: pointer;
		  }
		  #response{
			  width: 100%;
			  height: 70vh;
		  }
		  .row{
			  width: 98%;
			  height: 100%;
			  margin: 0 auto;
			  display: flex;
		  }
		  .col{
			  width: 14%;
			  height: 100%;
		  }
		  .card{
			width: 90%;
			height: 100%;
			margin: 0 auto;
		  }
		  .card-title{
			width: 100%;
			height: 15%;
			background: #e0e0e0;
			text-align: center;
			padding-top: 30%;
			font-size: 1.5em;
		  }
		  .card-image{
			margin-top: 5%;
			width: 100%;
			height: 80%;
			background: #e0e0e0;
		  }
		  .card-image img{
			  margin-top: 50%;
			  width: 70%;
			  margin-left: 15%;
			  margin-right: 15%;
		  }
	  </style>
</head>
<body>
<br>

<header>
	<div class="content">
		<div class="form">
			<div class="input-form">
				<input id="city" placeholder="Enter a city" type="text" name="city">
			</div>
			<div class="button-form">
				<button id="send"><b>GET WEATHER</b></button>
			</div>
		</div>
	</div>
</header>

<div id="response"></div>


</body>
</html>